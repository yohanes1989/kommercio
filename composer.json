{
    "name": "kommercio/e-commerce",
    "description": "Kommercio e-commerce platform.",
    "keywords": ["ecommerce"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "laravel/framework": "5.5.*",
        "guzzlehttp/guzzle": "^6.2",
        "laravelcollective/html": "^5.4",
        "cviebrock/eloquent-sluggable": "^4.3",
        "barryvdh/laravel-debugbar" : "^3.1",
        "dimsav/laravel-translatable": "^8.0",
        "doctrine/dbal": "^2.5",
        "spatie/laravel-glide": "^3.2",
        "fedeisas/laravel-mail-css-inliner": "~2.2",
        "phpoffice/phpexcel": "^1.8",
        "maatwebsite/excel": "~3.0",
        "maiorano84/shortcodes": "~1.0",
        "mews/captcha": "^2.2",
        "mailerlite/mailerlite-api-v2-php-sdk": "^0.2.2",
        "sendgrid/sendgrid": "~6.2",
        "unisharp/laravel-filemanager": "~1.8.4",
        "stripe/stripe-php": "6.*",
        "veritrans/veritrans-php": "dev-snap",
        "paypal/rest-api-sdk-php": "*",
        "laravel/socialite": "^3.0",
        "predis/predis": "^1.1",
        "barryvdh/laravel-httpcache": "^0.3.0",
        "barryvdh/laravel-dompdf": "^0.8.1",
        "s-ichikawa/laravel-sendgrid-driver": "^2.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~6.0",
        "laravel/tinker": "~1.0",
        "filp/whoops": "~2.0"
    },
    "autoload": {
        "classmap": [
            "database", "packages/project/src/Project/database"
        ],
        "psr-4": {
            "Kommercio\\": "app/",
            "Project\\": "packages/project/src"
        },
        "files": [
          "app/Helpers/CloudflareHelper.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true
    }
}
